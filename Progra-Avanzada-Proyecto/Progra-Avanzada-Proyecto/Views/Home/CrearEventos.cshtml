@{
    ViewBag.Title = "CrearEventos";
}
<main aria-labelledby="title">
        <!-- Body Inner -->
        <div class="body-inner">

            <!-- Section -->
            <section class="fullscreen" style="background-image: url(~/images/pages/1.jpg)">
                <div class="container container-fullscreen">
                    <div class="text-middle">
                        <div class="row">
                            <div class="col-lg-7 center p-30 background-white b-r-6">
                                <div class="col-lg-12 m-t-20 text-center">
                                    <h3>Registrar nuevo evento</h3>
                                    <p>Crear un evento nuevo llenando la informacion de abajo</p>
                                </div>

                                <div class="col-lg-12 form-group">
                                    <label class="sr-only">Fecha</label>
                                    <input type="text" value="" placeholder="Fecha" class="form-control form-control-lg">
                                </div>
                                <div class="col-lg-12 form-group">
                                    <label class="sr-only">Hora</label>
                                    <input type="text" value="" placeholder="Hora" class="form-control form-control-lg">
                                </div>
                                <div class="col-lg-12 form-group">
                                    <label class="sr-only">Ubicación</label>
                                    <input type="text" value="" placeholder="Ubicación" class="form-control form-control-lg">
                                </div>
                                <div class="col-lg-12 form-group">
                                    <label class="sr-only">Tipo de evento</label>
                                    <input type="text" value="" placeholder="Ubicación" class="form-control form-control-lg">
                                </div>
                                <div class="col-lg-12 form-group">
                                    <button class="btn" type="button">Solicitar evento </button>
                                    <a href="@Url.Action("Index", "Home")" class="btn-link">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- end: Section -->
        </div>
        <!-- end: Body Inner -->
        <a id="scrollTop"><i class="icon-chevron-up"></i><i class="icon-chevron-up"></i></a>
</main>